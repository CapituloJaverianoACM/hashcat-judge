<div class="container border border-white rounded-3 p-5">
    <!-- Form name -->
    <p class="display-4 text-white mb-4 form-title"> <%= formName.replace('-', ' '); %> </p>

    <!-- Form -->
    <%
        var handlePostRequest = '';  
        if (formName.toLowerCase() === 'log-in') handlePostRequest = '/';  
        else handlePostRequest = 'sign-up'; 
    %> 
    <form class="row g-3" method="POST" action="<%= handlePostRequest %>" > 
        <!-------------- Names Row ------------>
        <% // Check if the form is for log-in or sign-up  %> 
        <% if (formName === 'Sign-up') { %> 
            <!-- First name -->
            <div class="form-group col-md-6">
                <input type="text" name="first-name" class="form-control" id="inputFirstName" placeholder="First Name">
            </div>
            <!-- Last name -->
            <div class="form-group col-md-6">
                <input type="text" name="second-name" class="form-control" id="inputSecondName" placeholder="Last Name">
            </div>
        <% }; %>  
    
        <!-------------- Email Row ------------>
        <!-- Email row -->
        <div class="form-group col-md-12">
            <input type="email" name="email" class="form-control" id="inputEmail" placeholder="example@javeriana.edu.co"> 
        </div>
    
        <!-------------- Password Row ------------>
        <!-- Password row -->
        <div class="form-group col-md-12">
            <input type="password" name="password" class="form-control" id="inputPassword" placeholder="Password"> 
        </div>
    
        <!-------------- Fourth row ------------>
        <!-- Submit button -->
        <div class="col-12">
            <button id="submit-access-form" type="submit" class="btn btn-primary sign-up"> <%= formName.replace('-', ' '); %> </button>
        </div>
    </form>
</div>
